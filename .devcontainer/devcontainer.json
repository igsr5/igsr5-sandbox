{
  "name": "dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "hostRequirements": {
    "cpus": 8,
    "memory": "8gb",
    "storage": "32gb"
  },
  "features": {
    // https://docs.github.com/en/codespaces/developing-in-codespaces/using-github-codespaces-with-github-cli#ssh-into-a-codespace
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/ruby:1": {
      "version": "3.1.4"
    },
    "https://github.com/igsr5/devcontainer/releases/devcontainer-feature-common-tools.tgz": {}
  },
  "customizations": {
    "codespaces": {
      "repositories": {
        "igsr5/devcontainer": {
          "permissions": {
            "contents": "read"
          }
        }
      }
    }
  }
}
